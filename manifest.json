{
  "name": "Schedule Site",
  "description": "Block websites on a schedule and time manager",
  "version": "1.1.6",
  "manifest_version": 3,
  "permissions": [
    "unlimitedStorage",
    "storage",
    "tabs",
    "activeTab",
    "webNavigation"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/Misc.js",
        "src/Record.js",
        "src/RecordStorage.js",
        "src/options.js",
        "src/content.js",
        "src/popup.js",
        "images/ScheduleBlock128.png"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background_loader_mod.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "incognito": "spanning",
  "icons": {
    "16": "/images/icon16.png",
    "48": "/images/icon48.png",
    "128": "/images/ScheduleBlock128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon16.png"
    },
    "default_title": "Schedule Site"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  }
}